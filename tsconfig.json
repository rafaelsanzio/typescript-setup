{
	"compilerOptions": {
		"target": "es2020",
		"module": "commonjs",

		"outDir": "./dist",
		"rootDir": "./src",

		"strict": true,
		"strictPropertyInitialization": false,

		"baseUrl": "./src",
		/* "paths": {
			"@modules/*": ["modules/*"],
			"@config/*": ["config/*"],
			"@shared/*": ["shared/*"]
		}, */

		"esModuleInterop": true,

		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,

		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	}
}
